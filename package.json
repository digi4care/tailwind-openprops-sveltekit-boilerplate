{
  "name": "tailwind-openprops-sveltekit-boilerplate-with-sveltekit",
  "private": false,
  "version": "1.0.0",
  "description": "A modern CSS architecture using Tailwind CSS v4 and OpenProps to create a flexible, customizable design system with design tokens",
  "type": "module",
  "keywords": [
    "tailwindcss",
    "open-props",
    "design-tokens",
    "css",
    "sveltekit",
    "frontend"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/digi4care/tailwind-openprops-sveltekit-boilerplate.git"
  },
  "homepage": "https://github.com/digi4care/tailwind-openprops-sveltekit-boilerplate#readme",
  "bugs": {
    "url": "https://github.com/digi4care/tailwind-openprops-sveltekit-boilerplate/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview --host",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint ."
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.27.0",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/kit": "^2.21.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.1.8",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.9.0",
    "globals": "^16.2.0",
    "open-props": "^1.7.15",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.33.10",
    "svelte-check": "^4.2.1",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.5"
  }
}
